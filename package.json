{
  "name": "zod-mermaid",
  "version": "1.0.2",
  "description": "Generate Mermaid diagrams from Zod schemas",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "typescript",
    "zod",
    "mermaid",
    "schema",
    "visualization"
  ],
  "author": "Michael Houston (https://kothar.net)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kothar/zod-mermaid.git"
  },
  "bugs": {
    "url": "https://github.com/kothar/zod-mermaid/issues"
  },
  "homepage": "https://github.com/kothar/zod-mermaid#readme",
  "dependencies": {
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^30.0.0",
    "prettier": "^3.1.0",
    "rimraf": "^6.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
